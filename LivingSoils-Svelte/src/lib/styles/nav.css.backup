@import './themes.css';
@import './components.css';

/* Utilitaires */
.heading-font {
	font-family: var(--font-heading);
}

.nav-logo-gradient {
	background: linear-gradient(to right, var(--color-primary), var(--color-primary-light));
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
	background-clip: text;
}

.nav-cta-outline {
	border-color: #ffffff;
	color: #ffffff;
}

/* Simplification: pas de variables JS pour la nav */

/* Base nav */
.nav {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	z-index: 50;
	padding-block: 1rem;
	transition:
		background-color 200ms ease,
		box-shadow 200ms ease;
}

/* Transparent top */
.nav-transparent {
	background-color: transparent;
	box-shadow: none;
}

/* Scrolled */
.nav-scrolling {
	background: #ffffff;
	box-shadow:
		0 1px 2px rgba(0, 0, 0, 0.06),
		0 4px 12px rgba(0, 0, 0, 0.06);
}

/* Links */
.nav-link {
	position: relative;
	font-size: 1rem;
	font-weight: 500;
	color: var(--color-text);
	opacity: 0.88;
	white-space: nowrap;
	letter-spacing: 0.02em;
	transition:
		color 180ms ease,
		opacity 180ms ease;
}

.nav-link:hover,
.nav-link:focus-visible {
	opacity: 1;
	color: var(--color-primary);
}

.nav-link::after {
	content: '';
	position: absolute;
	bottom: -6px;
	left: 50%;
	transform: translateX(-50%) scaleX(0);
	transform-origin: center;
	height: 2px;
	width: 80%;
	background: linear-gradient(90deg, var(--color-primary), var(--color-primary-light));
	border-radius: 2px;
	opacity: 0;
	transition:
		transform 220ms ease,
		opacity 200ms ease;
}

.nav-link:hover::after,
.nav-link:focus-visible::after,
.nav-link[aria-current='page']::after,
.nav-link.active::after {
	transform: translateX(-50%) scaleX(1);
	opacity: 1;
}

.nav-link:focus-visible {
	outline: 2px solid transparent;
	outline-offset: 4px;
}

/* Transparent variant */
.nav-transparent .nav-link {
	color: #fff;
	opacity: 0.9;
}

.nav-transparent .nav-link::after {
	background: rgba(255, 255, 255, 0.8);
}

.nav-transparent .nav-link:hover {
	color: #fff;
	opacity: 1;
}

/* Active */
.nav-link[aria-current='page'],
.nav-link.active {
	color: var(--color-primary);
	opacity: 1;
}

.nav-transparent .nav-link[aria-current='page'],
.nav-transparent .nav-link.active {
	color: #fff;
}

/* Gutters */
.page-gutter-lg {
	padding-left: 2rem;
	padding-right: 2rem;
}

@media (min-width: 768px) {
	.page-gutter-lg {
		padding-left: 3rem;
		padding-right: 3rem;
	}
}

@media (min-width: 1280px) {
	.page-gutter-lg {
		padding-left: 4rem;
		padding-right: 4rem;
	}
}

/* Container */
.nav-container {
	gap: 2rem;
	justify-content: space-between;
}

/* Link list */
.nav-links {
	gap: 2rem;
}

@media (min-width: 1024px) {
	.nav-links {
		gap: 3rem;
	}
}

/* Logo */
.nav-logo {
	gap: 0.75rem;
	cursor: pointer;
}

.nav-logo-icon {
	width: 2.25rem;
	height: 2.25rem;
	border-radius: 0.5rem;
}

.nav-logo-text {
	font-size: 1.5rem;
	font-weight: 600;
}

/* CTA */
.nav-cta {
	white-space: nowrap;
	font-size: 0.95rem;
	font-weight: 400;
	transform-origin: center;
	padding: 0.625rem 1.5rem;
	border-radius: 9999px;
}

/* CTA transparent */
.nav-transparent .nav-cta {
	background: rgba(255, 255, 255, 0.08);
	border-color: rgba(255, 255, 255, 0.9);
	color: #fff;
}

.nav-transparent .nav-cta:hover {
	background: rgba(255, 255, 255, 0.16);
	border-color: #fff;
	color: #fff;
}

@media (min-width: 1024px) {
	.nav-container {
		gap: 3rem;
		justify-content: center;
	}
}
